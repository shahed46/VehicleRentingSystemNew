@model VehicleRentingSystem.Models.ViewModels.SummaryVM


    <section class="h-100 h-custom mt-5" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color:darkblue !important;">
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color:darkblue;">Ride details</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p>@Model.post.PickUpDate</p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Driver Name</p>
                <p>@Model.bid.ApplicationUser.Name</p>
              </div>
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
              <div class="row">
                <div class="col-md-6 col-lg-6">
                  <p>Pickup Location:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                  <p>@Model.post.PickUpLocation</p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 col-lg-6">
                  <p class="mb-0">Dropout Location:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                  <p class="mb-0">@Model.post.DropOutLoaction</p>
                </div>
              </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">Number of Passenger:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">@Model.post.NumberOfPassenger</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">Passenger mobile:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">@Model.post.ApplicationUser.PhoneNumber</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">Drivwe mobile:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">@Model.bid.ApplicationUser.PhoneNumber</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">Amount to pay:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">@Model.bid.Bidding</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">Tax:</p>
                </div>
                <div class="col-md-6 col-lg-6">
                    <p class="mb-0">0.00</p>
                </div>
            </div>
                           
            </div>

            <div class="row my-4">
             
              <div class="col-md-8 col-lg-9">
                  <p class="lead fw-bold mb-0">Sub Total:</p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p class="lead fw-bold mb-0" >@Model.bid.Bidding Tk</p>
                </div>
            </div>

           

            @*<p class="mt-4 pt-2 mb-0">Want any help? <a href="#!" style="color: #f37a27;">Please contact
                us</a></p>*@

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
