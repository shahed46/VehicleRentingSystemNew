@model IEnumerable<City>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
          <h2 class="text-primary">City List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="City" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> &nbsp; Create new City
            </a>
        </div>
    </div>

</div>
</br> </br>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
			</th>
           
            <th></th>
        </tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.CityName
				</td>
              
                <td>
                    <div class="w-75  btn-group" role="group">
                        <a asp-controller="City" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
                       
                         <a asp-controller="City" asp-action="Delete" asp-route-id="@obj.Id"> <i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
                
			</tr>
        }
    </tbody>
    </table>

