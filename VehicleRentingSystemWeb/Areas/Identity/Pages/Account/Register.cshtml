@page
@using VehicleRentingSystem.Utility;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="row p-3 mt-5">
    <div class=" border rounded-3 col-6 p-3" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">


        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            @if(User.IsInRole(SD.Role_Admin))
            {
                <h2 style="text-align:center; color:darkblue; font-family:'Times New Roman', Times, serif">Register - Admin portal</h2>
            }
            else
            {
                <h2 style="text-align:center; color:darkblue; font-family:'Times New Roman', Times, serif">Sign up</h2>
                <h5 style="text-align:center">Create a new account.</h5>
            }
            
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6 p-2">
                    <div class="form-floating p-2">
                        <input asp-for="Input.Name" class="form-control"  aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.Name"></label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                        <input asp-for="Input.Email" class="form-control"  aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                        <input asp-for="Input.City" class="form-control" autocomplete="username" aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.City"></label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                        <input asp-for="Input.Area" class="form-control" autocomplete="username" aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.Area"></label>
                        <span asp-validation-for="Input.Area" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.PhoneNumber"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                        <button id="registerSubmit" type="submit" class="col-6  btn  btn-primary " style="background: linear-gradient(to right, #000428, #004e92);">Register</button>
                    </div>
                    @*<div class="form-floating p-2 ">
                        <label style="color:indigo" asp-for="Input.ProfilePic">Profile picture</label>
                        <input type="file" name="file" class="form-control" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />

                    </div>*@

            </div>
                   
             <div class="col-6 p-2">
                    <div class="form-floating p-2">
                        <input asp-for="Input.Password" class="form-control"  aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control"  aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2 ">
                        <label style="color:indigo" asp-for="Input.ProfilePic">Profile picture</label>
                        <input type="file" name="file" class="form-control" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />

                    </div>
                   
                        <div class="form-floating p-2">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
                                <option disabled selected>--Select Role--</option>
                            </select>
                        </div>
                    

               
                <div id="Driver_section" style="display:none">
           
                    <div class="form-floating p-2">
                            <input asp-for="Input.LicenseNo" class="form-control" autocomplete="username" aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.LicenseNo"></label>
                        <span asp-validation-for="Input.LicenseNo" class="text-danger"></span>
                    </div>
                    <div class="form-floating p-2">
                            <input asp-for="Input.VehicleNo" class="form-control" autocomplete="username" aria-required="true" style=" box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);" />
                        <label asp-for="Input.VehicleNo"></label>
                        <span asp-validation-for="Input.VehicleNo" class="text-danger"></span>
                    </div>
               </div>
            </div>
            
           
               
            </div>

            @*<button id="registerSubmit" type="submit" class="col-6 p-2 btn  btn-primary " style="background: linear-gradient(to right, #000428, #004e92);">Register</button>*@
          </form>
        </div>
     
    
    <div class="col-6 col-md-offset-2" style="background-image: url('../../../../images/background images/registration.jpg');background-size: 80%; background-repeat:no-repeat; background-position:center;">
       @* <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                                    <div>
                                        <p>
                                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                            about setting up this ASP.NET application to support logging in via external services</a>.
                                        </p>
                                    </div>
                }
                else
                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins)
                                {
                                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                                            </p>
                                        </div>
                                    </form>
                }
            }
        </section>*@
       </div>
    
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function(){
            $('#Input_Role').change(function(){
                var selection=$('#Input_Role option:Selected').text();
                if(selection!='Driver')
                {
                    $('#Driver_section').hide();
                }
                else
                {
                    $('#Driver_section').show();
                }
            })
        })
    </script>
}
